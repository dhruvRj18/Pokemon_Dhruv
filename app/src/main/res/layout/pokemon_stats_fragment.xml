<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#22A78AC5">

    <ImageView
        android:id="@+id/pokemonDetailImage"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/pokemonDetailName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Name"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="@+id/pokemonDetailImage"
        app:layout_constraintStart_toStartOf="@+id/pokemonDetailImage"
        app:layout_constraintTop_toBottomOf="@+id/pokemonDetailImage" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/pokemonDetailRank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="#100"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/imageView"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/pokemonDetailImage"
        app:layout_constraintTop_toBottomOf="@+id/pokemonDetailName" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/ic_wight"
        app:layout_constraintEnd_toStartOf="@+id/pokemonDetailWeight"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/pokemonDetailRank"
        app:layout_constraintTop_toBottomOf="@+id/pokemonDetailName" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/pokemonDetailWeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="125 kg"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/pokemonDetailImage"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/pokemonDetailName" />




</androidx.constraintlayout.widget.ConstraintLayout>